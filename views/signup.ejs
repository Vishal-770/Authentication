<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <title>SecureAuth | Professional Authentication</title>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#f0f9ff',
              100: '#e0f2fe',
              600: '#2563eb',
              700: '#1d4ed8'
            }
          }
        }
      }
    }
  </script>
  <style>
    .auth-bg {
      background-image: radial-gradient(circle at 25% 50%, rgba(37, 99, 235, 0.05) 0%, transparent 50%);
    }
  </style>
</head>
<body class="auth-bg min-h-screen">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center">
            <i class="fas fa-lock text-primary-600 text-2xl mr-2"></i>
            <span class="text-xl font-bold text-gray-900">SecureAuth</span>
          </div>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:items-center">
          <div class="flex space-x-4">
            <!-- Add Home Button Here -->
            <form action="/" method="get">
              <button type="submit" class="text-gray-500 hover:text-gray-700 px-3 py-2 text-sm font-medium">
                <i class="fas fa-home mr-1"></i> Home
              </button>
            </form>
            <a href="#" class="text-gray-500 hover:text-gray-700 px-3 py-2 text-sm font-medium">Features</a>
            <a href="#" class="text-gray-500 hover:text-gray-700 px-3 py-2 text-sm font-medium">Pricing</a>
            <a href="#" class="text-gray-500 hover:text-gray-700 px-3 py-2 text-sm font-medium">Docs</a>
          </div>
        </div>
      </div>
    </div>
  </nav>


  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
      <!-- Left Column - Content -->
      <div class="mb-12 lg:mb-0">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">
          <span class="block">Secure Authentication</span>
          <span class="block text-primary-600">For Your Applications</span>
        </h1>
        <p class="mt-3 text-xl text-gray-500">
          Enterprise-grade authentication with simple integration. Secure your users with our robust auth system.
        </p>
        
        <div class="mt-8 space-y-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-primary-100 rounded-full p-2">
              <i class="fas fa-check text-primary-600"></i>
            </div>
            <p class="ml-3 text-base text-gray-700">Multi-factor authentication support</p>
          </div>
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-primary-100 rounded-full p-2">
              <i class="fas fa-check text-primary-600"></i>
            </div>
            <p class="ml-3 text-base text-gray-700">Passwordless login options</p>
          </div>
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-primary-100 rounded-full p-2">
              <i class="fas fa-check text-primary-600"></i>
            </div>
            <p class="ml-3 text-base text-gray-700">Enterprise-grade security</p>
          </div>
        </div>
      </div>
      
      <!-- Right Column - Auth Card -->
      <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
        <!-- Toggle tabs -->
        <div class="flex border-b">
          <button id="login-tab" class="flex-1 py-4 px-6 text-center font-medium text-gray-700 bg-primary-50">
            <i class="fas fa-sign-in-alt mr-2"></i> Login
          </button>
          <button id="signup-tab" class="flex-1 py-4 px-6 text-center font-medium text-gray-500 hover:text-gray-700">
            <i class="fas fa-user-plus mr-2"></i> Sign Up
          </button>
        </div>
        
        <!-- Forms container -->
        <div class="p-8">
          <!-- Login Form -->
          <form id="login-form" method="post" action="/auth/apiLogin" class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Welcome back</h2>
              <div class="space-y-4">
                <div>
                  <label for="login-username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <i class="fas fa-user text-gray-400"></i>
                    </div>
                    <input 
                      type="text" 
                      id="login-username" 
                      name="name" 
                      placeholder="Enter your username" 
                      class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                      required
                    >
                  </div>
                </div>
                <div>
                  <label for="login-password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <i class="fas fa-lock text-gray-400"></i>
                    </div>
                    <input 
                      type="password" 
                      id="login-password" 
                      name="password" 
                      placeholder="Enter your password" 
                      class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                      required
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input 
                  id="remember-me" 
                  name="remember-me" 
                  type="checkbox" 
                  class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                >
                <label for="remember-me" class="ml-2 block text-sm text-gray-700">Remember me</label>
              </div>
              <div class="text-sm">
                <a href="#" class="font-medium text-primary-600 hover:text-primary-500">Forgot password?</a>
              </div>
            </div>
            <button 
              type="submit" 
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition"
            >
              Sign in
            </button>
          </form>
          
          <!-- Signup Form -->
          <form id="signup-form" method="post" action="/auth/apiSignup" class="space-y-6 hidden">
            <div>
              <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Create your account</h2>
              <div class="space-y-4">
                <div>
                  <label for="signup-username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <i class="fas fa-user text-gray-400"></i>
                    </div>
                    <input 
                      type="text" 
                      id="signup-username" 
                      name="name" 
                      placeholder="Choose a username" 
                      class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                      required
                    >
                  </div>
                </div>
                <div>
                  <label for="signup-email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <i class="fas fa-envelope text-gray-400"></i>
                    </div>
                    <input 
                      type="email" 
                      id="signup-email" 
                      name="email" 
                      placeholder="Enter your email" 
                      class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                      required
                    >
                  </div>
                </div>
                <div>
                  <label for="signup-password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <i class="fas fa-lock text-gray-400"></i>
                    </div>
                    <input 
                      type="password" 
                      id="signup-password" 
                      name="password" 
                      placeholder="Create a password" 
                      class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition"
                      required
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="flex items-center">
              <input 
                id="terms" 
                name="terms" 
                type="checkbox" 
                class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                required
              >
              <label for="terms" class="ml-2 block text-sm text-gray-700">
                I agree to the <a href="#" class="text-primary-600 hover:text-primary-500">Terms and Conditions</a>
              </label>
            </div>
            <button 
              type="submit" 
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition"
            >
              Create account
            </button>
          </form>
          
          <!-- Error message -->
          <% if (locals.message) { %>
            <div class="mt-4 p-3 bg-red-50 text-red-700 rounded-lg text-sm">
              <i class="fas fa-exclamation-circle mr-2"></i><%= locals.message %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t mt-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="md:flex md:items-center md:justify-between">
        <div class="flex justify-center md:order-2 space-x-6">
          <a href="#" class="text-gray-400 hover:text-gray-500">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-gray-500">
            <i class="fab fa-github"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-gray-500">
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
        <div class="mt-8 md:mt-0 md:order-1">
          <p class="text-center text-base text-gray-400">
            &copy; 2023 SecureAuth. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const loginTab = document.getElementById('login-tab');
      const signupTab = document.getElementById('signup-tab');
      const loginForm = document.getElementById('login-form');
      const signupForm = document.getElementById('signup-form');
      
      // Switch to login form
      loginTab.addEventListener('click', function() {
        loginTab.classList.add('bg-primary-50', 'text-gray-700');
        loginTab.classList.remove('text-gray-500');
        signupTab.classList.remove('bg-primary-50', 'text-gray-700');
        signupTab.classList.add('text-gray-500');
        loginForm.classList.remove('hidden');
        signupForm.classList.add('hidden');
      });
      
      // Switch to signup form
      signupTab.addEventListener('click', function() {
        signupTab.classList.add('bg-primary-50', 'text-gray-700');
        signupTab.classList.remove('text-gray-500');
        loginTab.classList.remove('bg-primary-50', 'text-gray-700');
        loginTab.classList.add('text-gray-500');
        signupForm.classList.remove('hidden');
        loginForm.classList.add('hidden');
      });
    });
  </script>
</body>
</html>