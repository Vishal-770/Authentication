<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <title>Dashboard | SecureAuth</title>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                50: "#f0f9ff",
                100: "#e0f2fe",
                600: "#2563eb",
                700: "#1d4ed8",
              },
            },
          },
        },
      };
    </script>
    <style>
      .sidebar {
        position: fixed;
        height: 100vh;
        overflow-y: auto;
        transition: all 0.3s ease;
      }
      .main-content {
        margin-left: 16rem; /* matches w-64 */
      }
      @media (max-width: 767px) {
        .main-content {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Sidebar -->
    <div
      class="sidebar bg-white w-64 p-4 hidden md:block border-r border-gray-200 shadow-sm"
    >
      <div class="flex items-center mb-8 p-2">
        <i class="fas fa-lock text-primary-600 text-2xl mr-2"></i>
        <span class="text-xl font-bold text-gray-800">SecureAuth</span>
      </div>

      <nav class="space-y-1">
        <a
          href="#"
          class="flex items-center p-3 rounded-lg bg-primary-50 text-primary-600"
        >
          <i class="fas fa-tachometer-alt mr-3"></i>
          Dashboard
        </a>
        <a
          href="#"
          class="flex items-center p-3 rounded-lg text-gray-600 hover:bg-gray-100"
        >
          <i class="fas fa-user mr-3"></i>
          Profile
        </a>
        <a
          href="#"
          class="flex items-center p-3 rounded-lg text-gray-600 hover:bg-gray-100"
        >
          <i class="fas fa-cog mr-3"></i>
          Settings
        </a>
        <a
          href="#"
          class="flex items-center p-3 rounded-lg text-gray-600 hover:bg-gray-100"
        >
          <i class="fas fa-envelope mr-3"></i>
          Messages
        </a>
        <a
          href="#"
          class="flex items-center p-3 rounded-lg text-gray-600 hover:bg-gray-100"
        >
          <i class="fas fa-chart-bar mr-3"></i>
          Analytics
        </a>
      </nav>

      <div
        class="absolute bottom-0 left-0 w-64 p-4 bg-white border-t border-gray-200"
      >
        <form action="/auth/apilogout" method="post">
          <button
            type="submit"
            class="w-full flex items-center p-3 rounded-lg text-gray-600 hover:bg-red-50 hover:text-red-600 transition"
          >
            <i class="fas fa-sign-out-alt mr-3"></i>
            Logout
          </button>
        </form>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content flex-1 overflow-auto">
      <!-- Mobile Header -->
      <header
        class="bg-white p-4 flex justify-between items-center border-b border-gray-200 md:hidden shadow-sm"
      >
        <button id="menu-toggle" class="text-gray-600">
          <i class="fas fa-bars text-xl"></i>
        </button>
        <div class="flex items-center">
          <i class="fas fa-lock text-primary-600 text-xl mr-2"></i>
          <span class="text-lg font-bold text-gray-800">SecureAuth</span>
        </div>
      </header>

      <!-- Dashboard Content -->
      <main class="p-6">
        <!-- Welcome Banner -->
        <div
          class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl p-6 mb-6 shadow-lg"
        >
          <h1 class="text-3xl font-bold text-white mb-2">
            Welcome back, <%= name %>! ðŸ‘‹
          </h1>
          <p class="text-primary-100">
            You have full access to all premium features. Last login: 2 hours
            ago.
          </p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
          <div
            class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-primary-600"
          >
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-500 text-sm">Total Users</p>
                <h3 class="text-2xl font-bold mt-1 text-gray-800">50,842</h3>
              </div>
              <div class="bg-primary-100 p-3 rounded-lg text-primary-600">
                <i class="fas fa-users"></i>
              </div>
            </div>
            <p class="text-green-500 text-sm mt-2">
              <i class="fas fa-arrow-up mr-1"></i> 12.5% from last month
            </p>
          </div>

          <div
            class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-blue-400"
          >
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-500 text-sm">Active Sessions</p>
                <h3 class="text-2xl font-bold mt-1 text-gray-800">1,248</h3>
              </div>
              <div class="bg-blue-100 p-3 rounded-lg text-blue-600">
                <i class="fas fa-signal"></i>
              </div>
            </div>
            <p class="text-green-500 text-sm mt-2">
              <i class="fas fa-arrow-up mr-1"></i> 3.2% from yesterday
            </p>
          </div>

          <div
            class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-purple-500"
          >
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-500 text-sm">Messages</p>
                <h3 class="text-2xl font-bold mt-1 text-gray-800">5,201</h3>
              </div>
              <div class="bg-purple-100 p-3 rounded-lg text-purple-600">
                <i class="fas fa-envelope"></i>
              </div>
            </div>
            <p class="text-red-500 text-sm mt-2">
              <i class="fas fa-arrow-down mr-1"></i> 1.8% from last week
            </p>
          </div>

          <div
            class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-green-500"
          >
            <div class="flex justify-between items-start">
              <div>
                <p class="text-gray-500 text-sm">Storage Used</p>
                <h3 class="text-2xl font-bold mt-1 text-gray-800">78%</h3>
              </div>
              <div class="bg-green-100 p-3 rounded-lg text-green-600">
                <i class="fas fa-database"></i>
              </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-3">
              <div
                class="bg-green-500 h-2 rounded-full"
                style="width: 78%"
              ></div>
            </div>
          </div>
        </div>

        <!-- Recent Activity and Notifications -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Recent Activity -->
          <div class="lg:col-span-2 bg-white rounded-xl p-6 shadow-lg">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-history mr-2 text-primary-500"></i> Recent
                Activity
              </h2>
              <a href="#" class="text-sm text-primary-600 hover:underline"
                >View All</a
              >
            </div>

            <div class="space-y-4">
              <div class="flex items-start">
                <div
                  class="bg-primary-100 p-2 rounded-lg mr-4 text-primary-600"
                >
                  <i class="fas fa-user-shield"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-800">
                    Security Update Applied
                  </h4>
                  <p class="text-gray-500 text-sm">
                    New authentication protocols enabled
                  </p>
                  <p class="text-gray-400 text-xs mt-1">2 hours ago</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="bg-green-100 p-2 rounded-lg mr-4 text-green-600">
                  <i class="fas fa-check-circle"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-800">Profile Updated</h4>
                  <p class="text-gray-500 text-sm">
                    You changed your profile picture
                  </p>
                  <p class="text-gray-400 text-xs mt-1">5 hours ago</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="bg-blue-100 p-2 rounded-lg mr-4 text-blue-600">
                  <i class="fas fa-envelope-open-text"></i>
                </div>
                <div>
                  <h4 class="font-medium text-gray-800">New Message</h4>
                  <p class="text-gray-500 text-sm">
                    From support team regarding your query
                  </p>
                  <p class="text-gray-400 text-xs mt-1">1 day ago</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Notifications -->
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="flex justify-between items-center mb-6">
              <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-bell mr-2 text-yellow-500"></i> Notifications
              </h2>
              <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full"
                >3 New</span
              >
            </div>

            <div class="space-y-4">
              <div
                class="p-3 bg-gray-50 rounded-lg border-l-4 border-primary-600"
              >
                <div class="flex justify-between">
                  <h4 class="font-medium text-gray-800">
                    System Update Available
                  </h4>
                  <span class="text-xs text-gray-500">Now</span>
                </div>
                <p class="text-gray-500 text-sm mt-1">
                  Version 2.3.1 is ready to install
                </p>
              </div>

              <div
                class="p-3 bg-gray-50 rounded-lg border-l-4 border-green-500"
              >
                <div class="flex justify-between">
                  <h4 class="font-medium text-gray-800">
                    New Feature Unlocked
                  </h4>
                  <span class="text-xs text-gray-500">Today</span>
                </div>
                <p class="text-gray-500 text-sm mt-1">
                  Advanced analytics now available
                </p>
              </div>

              <div
                class="p-3 bg-gray-50 rounded-lg border-l-4 border-purple-500"
              >
                <div class="flex justify-between">
                  <h4 class="font-medium text-gray-800">Security Alert</h4>
                  <span class="text-xs text-gray-500">Yesterday</span>
                </div>
                <p class="text-gray-500 text-sm mt-1">
                  New device logged in to your account
                </p>
              </div>
            </div>

            <button
              class="w-full mt-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm text-primary-600 transition"
            >
              Mark All as Read
            </button>
          </div>
        </div>
      </main>
    </div>

    <script>
      // Mobile menu toggle
      document
        .getElementById("menu-toggle")
        .addEventListener("click", function () {
          document.querySelector(".sidebar").classList.toggle("hidden");
        });
    </script>
  </body>
</html>
